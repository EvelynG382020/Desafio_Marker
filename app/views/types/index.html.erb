<div class="container">  
  <p id="notice"><%= notice %></p>

  <h1>Types</h1><hr>
  <%= link_to 'New Type', new_type_path %> |
  <%= link_to 'All Categories', categories_path %><hr>

  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @types.each do |type| %>
        <tr>
          <td><%= type.name %></td>
          <td><%= link_to 'Show', type %></td>
          <td><%= link_to 'Edit', edit_type_path(type) %></td>
          <td><%= link_to 'Destroy', type, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <hr>
</div>
